# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# PRODUCT
GET     /products                   controllers.ProductController.getAll()
GET     /products/get/:productId    controllers.ProductController.getProduct(productId: Int)
POST    /products/create            controllers.ProductController.addNewProduct()
PUT     /products/update/:productId controllers.ProductController.updateProduct(productId: Int)
DELETE  /products/delete/:productId controllers.ProductController.deleteProduct(productId: Int)

# CATHEGORY
GET     /cathegories                   controllers.CathegoryController.getAll()
GET     /cathegories/get/:productId    controllers.CathegoryController.getProduct(productId: Int)
POST    /cathegories/create            controllers.CathegoryController.addNewProduct()
PUT     /cathegories/update/:productId controllers.CathegoryController.updateProduct(productId: Int)
DELETE  /cathegories/delete/:productId controllers.CathegoryController.deleteProduct(productId: Int)
